.container
  .row
    .col-md-4
    .col-md-4
      - if @flash_notice != ""
        .alert.alert-danger
          %button.close{:type=>"button", "data-dismiss"=>"alert"}
            %span{"aria-hidden"=>true}Ã—
            %span.sr-only Close
          %strong 
            = @flash_notice
            - if @current_user.errors.any?
              - @current_user.errors.full_messages.each do |error|
                = error
    .col-md-4

  .row
    .col-md-4
    .col-md-4
      = form_tag(:action => 'setting') do
        .form-group
          %label Email:
          %input{:class => 'form-control', :value=>@current_user.email, :name=>:email}
        .form-group 
          %label Password: 
          %input{:class => 'form-control', :type=>:password, :name=>:password}
        .form-group
          %label First Name:
          %input{:class => 'form-control', :value=>@current_user.firstname, :name=>:firstname}
        .form-group
          %label Last Name:
          %input{:class => 'form-control', :value=>@current_user.lastname, :name=>:lastname}
        .form-group
          %label Phone Number:
          %input{:class => 'form-control', :value=>@current_user.phonenumber, :name=>:phonenumber}
        .form-group
          %label Gender:
          - if @current_user.gender == "male"
            %label.checkbox-inline
              %input{:type=>'radio', :value=>'male', :name=>:gender, :checked=>'checked'}
              Male
            %label.checkbox-inline
              %input{:type=>'radio', :value=>'female', :name=>:gender}
              Female
          -else
            %label.checkbox-inline
              %input{:type=>'radio', :value=>'male', :name=>:gender}
              Male
            %label.checkbox-inline
              %input{:type=>'radio', :value=>'female', :name=>:gender, :checked=>'checked'}
              Female
        .form-group
          %label Address:
          %input{:class => 'form-control', :value=>@current_user.addressline1, :name=>:addressline1}
        .form-group
          %label City:
          %input{:class => 'form-control', :value=>@current_user.city, :name=>:city}
        .form-group
          %label State:
          %input{:class => 'form-control', :value=>@current_user.state, :name=>:state}
        .form-group
          %label Zip Code:
          %input{:class => 'form-control', :value=>@current_user.zipcode, :name=>:zipcode}
        
        = submit_tag("Save", :class =>'btn btn-success center-block')
        
    .col-md-4

.footer{:id => "footer", :style => "margin-bottom: 0"}
  .row{:style => "background-color:rgba(15,39,64,1.00);"}
    .col-md-3
    .col-md-6
      =image_tag "im3.png", :width=>"100%", :position=>"fixed", :bottom=>"0"
    .col-md-3
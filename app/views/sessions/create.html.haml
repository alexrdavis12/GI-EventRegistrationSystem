        .form-group
          %label Zipcode:
          %input{:class => 'form-control', :value=>@user.zipcode, :name=>:zipcode}
        .row
          .col-md-4
          .col-md-4
            = submit_tag("Create", :class => 'btn btn-success')
          .col-md-4
    .col-md-4


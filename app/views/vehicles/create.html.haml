                %option{:value => 'Tracked'}= "Tracked" 
                %option{:value => 'Other'}="Other"
            
            %label Vehicle Impression
            .form-group
              .col-md-1
              .col-md-4
                %label Nation
                %select{:class => 'form-control', :value=>'', :name=>"Nation", :required=>""}
                  %option{:value => "USA"}= "USA"
                  %option{:value => "British"}= "British"
                  %option{:value => "Soviet"}= "Soviet"
                  %option{:value => "German"}= "German"
                  %option{:value => "Italian"}= "Italian"
                  %option{:value => "Japanese"}= "Japanese"
                  %option{:value => "French"}= "French"
                  %option{:value => "Prussia"}= "Prussia"
                  %option{:value => "South Korea"}= "South Korea"
                  %option{:value => "North Korea"}= "North Korea"
                  %option{:value => "North Vietnam"}= "North Vietnam"
                  %option{:value => "South Vietnam"}= "South Vietnam"
                  %option{:value => "Other"}= "Other (Specify in Description)"
              .col-md-1
              .col-md-4
                %label War
                %input{:class => 'form-control', :value=>'', :name=>"War", :required=>""}
        
            .form-group
              %label Vehicle Description
              %textarea{:class => 'form-control', :rows => "8", :value=>'', :name=>"Description"}
      
            = submit_tag("Create", :class => 'btn btn-primary')

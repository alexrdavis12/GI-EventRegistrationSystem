        .panel-heading
          %h3.panel-title Vehicle
        .panel-body
          = form_tag(:action => 'create') do
            .form-group
              %label Vehicle Name
              %input{:class => 'form-control', :value=>'', :name=>"Name", :required=>""}
        
            .form-group
              %label Vehicle Class
              %select{:class => 'form-control', :value=>'', :name=>"Class", :required=>""}

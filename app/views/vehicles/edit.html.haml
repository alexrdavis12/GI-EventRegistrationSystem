.container
  .row
    .col-md-2
    .col-md-8
      .panel.panel-primary
        .panel-heading
          %h3.panel-title Vehicle
        .panel-body
          = form_tag(:action => 'update', :vid => @vehicle.id) do
            .form-group
              %label Vehicle Name
              %input{:class => 'form-control', :value=>@vehicle.vname, :name=>"Name", :required=>""}
        
            .form-group
              %label Vehicle Class
              %input{:class => 'form-control', :value=>@vehicle.vclass, :name=>"Class", :required=>""}
                    
            
            %label Vehicle Impression
            .form-group
              .col-md-1
              .col-md-4
                %label Nation
                %select{:class => 'form-control', :value=>@vehicle.vnation, :name=>"Nation", :required=>""}
                  %option{:value => "USA", :selected => @vehicle.vnation == "USA"}= "USA" 
                  %option{:value => "British", :selected => @vehicle.vnation == "British"}= "British"
                  %option{:value => "Soviet", :selected => @vehicle.vnation == "Soviet"}= "Soviet"
                  %option{:value => "German", :selected => @vehicle.vnation == "German"}= "German"
                  %option{:value => "Italian", :selected => @vehicle.vnation == "Italian"}= "Italian"
                  %option{:value => "Japanese", :selected => @vehicle.vnation == "Japanese"}= "Japanese"
                  %option{:value => "French", :selected => @vehicle.vnation == "French"}= "French"
                  %option{:value => "Prussia", :selected => @vehicle.vnation == "Prussia"}= "Prussia"
                  %option{:value => "South Korea", :selected => @vehicle.vnation == "South Korea"}= "South Korea"
                  %option{:value => "North Korea", :selected => @vehicle.vnation == "North Korea"}= "North Korea"
                  %option{:value => "North Vietnam", :selected => @vehicle.vnation == "North Vietnam"}= "North Vietnam"
                  %option{:value => "South Vietnam", :selected => @vehicle.vnation == "South Vietnam"}= "South Vietnam"
                  %option{:value => "Other", :selected => @vehicle.vnation == "Other"}= "Other (Specify in Description)"
              .col-md-1
              .col-md-4
                %label War
                %input{:class => 'form-control', :value=>@vehicle.vwar, :name=>"War", :required=>""}
        
            .form-group
              %label Vehicle Description
              %textarea{:class => 'form-control', :rows => "8", :value=>@vehicle.vdescription, :name=>"Description"}
                =@vehicle.vdescription
      
            = submit_tag("Save", :class => 'btn btn-primary')



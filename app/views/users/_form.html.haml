= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :firstname
    = f.text_field :firstname
  .field
    = f.label :lastname
    = f.text_field :lastname
  .field
    = f.label :phonenumber
    = f.number_field :phonenumber
  .field
    = f.label :gender
    = f.text_field :gender
  .field
    = f.label :addressline1
    = f.text_field :addressline1
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.select :state, [['Hot','hot'],['Medium','medium'],['Cold','cold']]
  .actions

    = f.submit 'Save

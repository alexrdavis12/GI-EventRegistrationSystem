%h1 edit existing event form 

    

 = form_tag(:action => 'create') do
            .form-group
              %label Event Title
              %input{:class => 'form-control', :value=>'', :name=>"Title"}
  
            .form-group
              %label Event Location
              %input{:class => 'form-control', :value=>'', :name=>"Location"}
  
            .form-group
              %label Event Description
              %textarea{:class => 'form-control', :rows => "8", :value=>'', :name=>"Description"}
  
            .form-group
              %label Start Date
              %input{:type => 'text', :class => 'form-control', :id =>'dp1',:value=>'', :name=>"Start_Date"}

            .form-group
              %label End Date
              %input{:type => 'text', :class => 'form-control', :id =>'dp2',:value=>'', :name=>"End_Date"}
  
            = submit_tag("Create", :class => 'btn btn-primary')
       
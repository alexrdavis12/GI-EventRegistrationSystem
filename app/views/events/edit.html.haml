.container
  %div{:class=>"modal fade", :id=>"myModal", :role=>"dialog"}
    %div{:class=>"modal-dialog"}
      %div{:class=>"modal-content"}
        %div{:class=>"modal-header"}
          %h4{:class=>"modal-title"} Warning!
        %div{:class=>"modal-body"}
          %p End Date Should Be After Start Date.
  .row
    .col-md-2
    .col-md-8
      .panel.panel-primary
        .panel-heading
          %h3.panel-title Event
        .panel-body
          = form_tag(:action => 'update', :eid => @event.id) do
            .form-group
              %label Open for registration?     
              %label.checkbox-inline
                %input{:type=>'radio', :value=> 1, :name=> :Availability, :checked=>@event.eavailabilityflag==1, :id=>"Availability"}
                Yes 
              %label.checkbox-inline
                %input{:type=>'radio', :value=> 0, :name=> :Availability, :checked=>@event.eavailabilityflag==0, :id=>"Availability"}
                No
              %br
              %label Roles:
              %br
              &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              %check_box_tag
              %input{:type => "checkbox", :value => '', :id=>"All",:name => "All"}
              %label All &nbsp; &nbsp;
              %check_box_tag
              %input{:class =>"checkbox1", :type => "checkbox", :value => 0, :checked=>@event.evendorflag==1,  :id=>"Vendor", :name => "Vendor", }
              %label Vendor &nbsp; &nbsp;
              %check_box_tag
              %input{:class =>"checkbox1", :type => "checkbox", :value => 0,:checked=>@event.evehicleflag==1,  :id=>"Vehicle", :name => "Vehicle", }
              %label Vehicle &nbsp; &nbsp;
              %check_box_tag
              %input{:class =>"checkbox1", :type => "checkbox", :value => 0, :checked=>@event.eimpressionflag==1, :id=>"Reenactors", :name => "Reinactors", }
              %label Reinactors &nbsp; &nbsp;
              %check_box_tag
              %input{:class =>"checkbox1", :type => "checkbox",:value => 0, :checked=>@event.eeducatorflag==1, :id=>"Educators", :name => "Educators", }
              %label Educators&nbsp;&nbsp;&nbsp;
            
            .form-group
              %label Event Title
              %input{:class => 'form-control', :value=> @event.etitle, :name=>"Title"}
  
            .form-group
              %label Event Location
              %input{:class => 'form-control', :value=> @event.elocation, :name=>"Location"}
  
            .form-group
              %label Event Description
              %textarea{:class => 'form-control', :value=> @event.edescription, :name=>"Description"}
                =@event.edescription
  
            .form-group
              %label Start Date
              %input{:type => 'text', :class => 'form-control', :id =>'dp1',:value=> @event.estart, :name=>"Start_Date"}

            .form-group
              %label End Date
              %input{:type => 'text', :class => 'form-control', :id =>'dp2',:value=> @event.eend, :name=>"End_Date"}
            
            = submit_tag("Save", :class => 'btn btn-primary')
       
  .row
    %p{:id => "demo"}

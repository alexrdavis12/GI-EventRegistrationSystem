.container
  %div{:class=>"modal fade", :id=>"myModal", :role=>"dialog"}
    %div{:class=>"modal-dialog"}
      %div{:class=>"modal-content"}
        %div{:class=>"modal-header"}
          %h4{:class=>"modal-title"} Warning!
        %div{:class=>"modal-body"}
          %p End Date Should Be After Start Date.
  .row
    .col-md-2
    .col-md-8
      .panel.panel-primary
        .panel-heading
          %h3.panel-title Event
        .panel-body

          = form_tag(:action => 'create') do
            .form-group 
              %label Roles:
              %br
              &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              %check_box_tag
              %input{:type => "checkbox", :value => 'Vendor', :name => "Vendor", }
              %label All &nbsp; &nbsp;
              %check_box_tag
              %input{:type => "checkbox", :value => 'Vendor', :name => "Vendor", }
              %label Vendor &nbsp; &nbsp;
              %check_box_tag
              %input{:type => "checkbox", :value => 'Vendor', :name => "Vehicle", }
              %label Vehicle &nbsp; &nbsp;
              %check_box_tag
              %input{:type => "checkbox", :value => 'Vendor', :name => "Reinactors", }
              %label Reinactors &nbsp; &nbsp;
              %check_box_tag
              %input{:type => "checkbox",:value => 'Vendor', :name => "Educators", }
              %label Educators&nbsp;&nbsp;&nbsp;
              %check_box_tag
              %input{:type => "checkbox", :value => 'Vendor', :name => "Vendor", }
              %label Vendor &nbsp; &nbsp;
            
            .form-group
              %label Event Title
              %input{:class => 'form-control', :value=>'', :name=>"Title"}
              
            .form-group
              %label Event Location
              %input{:class => 'form-control', :value=>'', :name=>"Location"}
  
            .form-group
              %label Event Description
              %textarea{:class => 'form-control', :rows => "8", :value=>'', :name=>"Description"}
  
            .form-group
              %label Start Date
              %input{:type => 'text', :class => 'form-control', :id =>'dp1',:value=>'', :name=>"Start_Date"}

            .form-group
              %label End Date
              %input{:type => 'text', :class => 'form-control', :id =>'dp2',:value=>'', :name=>"End_Date"}
  
            = submit_tag("Create", :class => 'btn btn-primary')
  .row
    %p{:id => "demo"}
